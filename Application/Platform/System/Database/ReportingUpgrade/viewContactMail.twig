SELECT

-- PersonId to match with all View's // tblToPerson
    tTP.serviceTblPerson AS TblPerson_Id,
    tTP.Remark AS TblToPerson_Remark,
-- tblType
    tT.Name AS TblType_Name,
    tT.Description AS TblType_Description,
-- tblMail
    -- tM.Address AS TblMail_Address
    tM.Address AS TblMail_Address

    FROM ContactMail_FES.tblToPerson tTP
        LEFT JOIN ContactMail_FES.tblType tT ON tT.Id = tTP.tblType
        LEFT JOIN ContactMail_FES.tblMail as tM on tM.Id = tTP.tblMail

    WHERE tTP.EntityRemove IS NULL

    group by tTP.serviceTblPerson, tT.Name, tM.Address