SELECT distinct

-- PersonId to match with all View's // tblToPerson
    tTP.serviceTblPerson AS TblPerson_Id,
    tTP.Remark AS TblToPerson_Remark,
-- tblType
    tT.Name AS TblType_Name,
    tT.Description AS TblType_Description,
-- tblMail
    -- tM.Address AS TblMail_Address
    (SELECT
        group_concat(
            concat(
                tMtemp.Address
            ) separator '; \n'
        )
        FROM ContactMail_{{ ConsumerAcronym }}.tblToPerson as tTPtemp
        left join ContactMail_{{ ConsumerAcronym }}.tblMail as tMtemp on tMtemp.Id = tTPtemp.tblMail
        where tTPtemp.serviceTblPerson = tTP.serviceTblPerson
        and tTPtemp.tblType = tT.Id
    ) AS TblMail_Address

FROM ContactMail_{{ ConsumerAcronym }}.tblToPerson tTP
    LEFT JOIN ContactMail_{{ ConsumerAcronym }}.tblType tT ON tT.Id = tTP.tblType

WHERE tTP.EntityRemove IS NULL