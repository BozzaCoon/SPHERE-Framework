SELECT

-- PersonId to match with all View's // tblToPerson
    tTP.serviceTblPerson AS TblPerson_Id,
    tTP.Remark AS TblToPerson_Remark,
-- tblType
    tT.Name AS TblType_Name,
    tT.Description AS TblType_Description,
-- tblPhone
    tP.Number AS TblPhone_Number

FROM ContactPhone_{{ ConsumerAcronym }}.tblToPerson tTP
    LEFT JOIN ContactPhone_{{ ConsumerAcronym }}.tblType tT ON tT.Id = tTP.tblType
    LEFT JOIN ContactPhone_{{ ConsumerAcronym }}.tblPhone tP ON tP.Id = tTP.tblPhone

WHERE tTP.EntityRemove IS NULL